<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Class</title>
    <style>
        .studentGrid{
          border: solid;
          border-width: 2px;
          border-color: black;
          margin-left: 20px;   
          display: flex;
          align-items: flex-start;
          flex-direction: column;
        }
        .studentGrid img{
            width: 130px;
            height: 130px;
        }
        .bodyDetails{
            width: 800px;
            margin-top: 40px;
            
        }
    </style>
</head>
<body>
    <div class="header">
       <input type="search" name="searchedStudent" id="searchBar">
       <input type="button" name="searchButton">
    </div>
    <div class="bodyDetails">
        <% studentsList.forEach(element => { %>
            <form action="/viewMoreStudentDetails" method="post">
            <div id = 'regNo' class="studentName studentGrid">
                <img  src="data:<%=element.image.type %>;base64, <%= element.image.binaryData%>" alt="">
                <p>Name : <%= element.name %></p>
                <p>RegNo : <%= element.registerNo %></p>
                <p><%= element.degree %> <%= element.branch %></p>
                <input type="text" value="<%= JSON.stringify(element) %>" name= "moreStudentDetails" hidden>
                <button type="submit">View more...</button>
             </div>
            </form>
        <% }) %>
    </div>
</body>
</html>